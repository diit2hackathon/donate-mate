<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>AddContributionServlet</servlet-name>
        <servlet-class>info.diit.servlet.AddContributionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddDistributionServlet</servlet-name>
        <servlet-class>info.diit.servlet.AddDistributionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DistributionReportServlet</servlet-name>
        <servlet-class>info.diit.servlet.DistributionReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DonationReportServlet</servlet-name>
        <servlet-class>info.diit.servlet.DonationReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContactableContributorsReport</servlet-name>
        <servlet-class>info.diit.servlet.ContactableContributorsReport</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddContributionServlet</servlet-name>
        <url-pattern>/AddContributionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddDistributionServlet</servlet-name>
        <url-pattern>/AddDistributionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DistributionReportServlet</servlet-name>
        <url-pattern>/DistributionReportServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DonationReportServlet</servlet-name>
        <url-pattern>/DonationReportServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContactableContributorsReport</servlet-name>
        <url-pattern>/ContactableContributorsReport</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <persistence-context-ref>
        <persistence-context-ref-name>persistence/LogicalName</persistence-context-ref-name>
        <persistence-unit-name>HopeCenterPU</persistence-unit-name>
    </persistence-context-ref>
    <resource-ref>
        <res-ref-name>UserTransaction</res-ref-name>
        <res-type>javax.transaction.UserTransaction</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
